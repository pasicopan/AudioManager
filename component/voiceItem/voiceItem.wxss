.voice_item_title {
  font-size: 32rpx;
  font-weight: bold;
  color: #2d2928;
}
.voice_item_author {
  margin-top: 37rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.avatar {
  background-color: #eee;
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  overflow: hidden;
}
.name {
  margin-left: 20rpx;
  font-size: 26rpx;

  color: #9a9a9a;
}
.voice_answer {
  margin-top: 26rpx;
}

/* audio */
.audio_container {
  min-width: 400rpx;
  max-width: 560rpx;
  width: 500rpx;
  height: 80rpx;
  background-color: #41a3ff;
  position: relative;
  color: #fff;
  border-radius: 40rpx;
}
.audio_progress {
  width: 0%;
  height: 100%;
  background: rgba(255, 255, 255, 0.2);
}

.audio_content {
  position: absolute;
  top: 0;
  left: 0;
  box-sizing: border-box;
  padding: 0 20rpx 0 26rpx;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.audio_status_icon {
  width: 20rpx;
  height: 32rpx;
  display: block;
}
.audio_status_icon.active {
  animation: status_icon 2s infinite both;
}
@keyframes status_icon {
  0% {
    opacity: 1;
  }
  50% {
    opacity: 0.5;
  }
  100% {
    opacity: 1;
  }
}
.audio_status_text {
  font-size: 30rpx;
}
.audio_status_time {
  font-size: 24rpx;
}
